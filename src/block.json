{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "tag-gallery/tag-gallery",
	"version": "0.1.0",
	"title": "Tag Gallery",
	"category": "widgets",
	"icon": "nametag",
	"description": "Enter in a tag and I'll pull all the images with that tag into a nice gallery",
	"example": {
		"attributes": {
			"query": "torkku"
		}
	},
	"supports": {
		"html": false
	},
	"textdomain": "tag-gallery",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"viewScript": "file:./view.js",
	"render": "file:./render.php",
	"attributes": {
		"query": {
			"type": "string",
			"default": ""
		},
		"ascending": {
			"type": "boolean",
			"default": false
		},
		"gallery_color": {
			"type": "string",
			"default": "#f6cb38"
		},
		"gallery_size": {
			"type": "number",
			"default": 150
		},
		"gallery_spacing": {
			"type": "number",
			"default": 10
		},
		"gallery_border": {
			"type": "number",
			"default": 5
		},
		"gallery_popout": {
			"type": "number",
			"default": 10
		}
	}
}
